#!/bin/bash

source ScriptFunctions
Import Log
Import OptionParser
Import File

### Options ###################################################################

scriptDescription="Convert a .la file created by libtool to make it GoboLinux-compliant."
scriptCredits="Copyright (C) Hisham H. Muhammad 2003. Released under the GNU GPL."
helpOnNoArguments=yes
scriptUsage="<files...>"
scriptExample="-b *.la"
Add_Option_Boolean "b" "backup" "Keep a backup file of the original .la file."
Parse_Options "$@"

### Operation #################################################################
Is_Writable "$PWD" || exit 0

n=$(Number_Of_Arguments)
for (( i=1 ; i<=n ; i++))
do
   current="$(Arg ${i})"
   [ "${current##*.}" != "la" ] && continue || Log_Verbose "Converting ${current}..."

   old="${current}~"
   while [ -e "$old" ]
   do old="$old~"
   done
   cp "${current}" "$old"
   cat "$old" | sed "
s%$goboPrograms/[^ /]*/*[^ /]*/*lib/*%$goboLibraries/%g;
s%$goboPrograms/[^ /]*/*[^ /]*/*lib\([ '\'']\)%$goboLibraries/\1%g;
" > "${current}"

   Boolean "backup" || rm -- "$old"
done

# Why the hell does libtool keep hardcoded paths?
